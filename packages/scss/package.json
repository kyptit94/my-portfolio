{
  "name": "@kl.e/scss",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "normalize-scss": "^8.0.0"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "node-sass": "^9.0.0",
    "nodemon": "^3.1.4",
    "normalize-scss": "^8.0.0",
    "prettier": "^3.3.2",
    "sass": "^1.77.6",
    "stylelint": "^16.6.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-sass-guidelines": "^11.1.0",
    "stylelint-prettier": "^5.0.0"
  },
  "scripts": {
    "lint": "stylelint \"src/**/*.scss\"",
    "lint:fix": "stylelint \"**/*.scss\" --fix",
    "build": "node src/scripts/build",
    "format": "prettier --write 'src/**/*.scss'",
    "dev": "nodemon --watch src --ext scss --exec \"yarn build\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{scss,css}": [
      "yarn lint:fix"
    ]
  }
}
